{
    "$schema": "https://docs.renovatebot.com/renovate-schema.json",
    "extends": [
        "config:base",
        ":rebaseStalePrs",
        ":semanticCommits",
        ":separatePatchReleases"
    ],
    "configMigration": true,
    "rangeStrategy": "bump",
    "lockFileMaintenance": {
        "enabled": true
    },
    "ignoreDeps": [
        "alptis/net-gearman"
    ],
    "regexManagers": [
        {
            "fileMatch": [
                "^okteto.yaml$"
            ],
            "matchStrings": [
                "image\\s?:\\s?(?<depName>.*?):(?<currentValue>[\\w+\\.\\-]*)"
            ],
            "datasourceTemplate": "docker",
            "versioningTemplate": "loose"
        }
    ],
    "packageRules": [
        {
            "groupName": "php",
            "matchDepNames": [
                "php",
                "etriasnl/dev-php-fpm",
                "etriasnl/php-fpm"
            ]
        },
        {
            "groupName": "php-http",
            "matchDepPatterns": [
                "^php-http/",
                "^psr/http-"
            ],
            "matchDepNames": [
                "nyholm/psr7"
            ]
        },
        {
            "groupName": "twig",
            "matchDepPatterns": [
                "^twig/"
            ]
        },
        {
            "groupName": "flysystem",
            "matchDepPatterns": [
                "flysystem"
            ]
        }
    ]
}
