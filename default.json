{
    "$schema": "https://docs.renovatebot.com/renovate-schema.json",
    "extends": [
        "config:recommended",
        ":rebaseStalePrs",
        ":semanticCommits"
    ],
    "timezone": "Europe/Amsterdam",
    "configMigration": true,
    "rangeStrategy": "bump",
    "pinDigests": false,
    "separateMinorPatch": true,
    "separateMultipleMinor": true,
    "lockFileMaintenance": {
        "enabled": true,
        "schedule": [
            "before 8am on wednesday"
        ]
    },
    "customManagers": [
        {
            "customType": "regex",
            "fileMatch": [
                "(^|/|\\.)Dockerfile$", 
                "(^|/)Dockerfile\\.[^/]*$"
            ],
            "matchStrings": [
                "# renovate: datasource=(?<datasource>[a-z-]+?)(?: depName=(?<depName>.+?))? packageName=(?<packageName>.+?)(?: versioning=(?<versioning>[a-z-]+?))?\\s(?:ENV|ARG) .+?_VERSION=(?<currentValue>.+?)\\s"
            ]
        }
    ],
    "packageRules": [
        {
            "matchDepNames": [
                "etriasnl/dev-php-fpm",
                "etriasnl/php-fpm"
            ],
            "versioning": "regex:^(?<major>\\d+)\\.(?<minor>\\d+)\\.(?<patch>\\d+)-(?<build>\\d+)$"
        },
        {
            "matchDepNames": [
                "minio/minio"
            ],
            "versioning": "regex:^RELEASE\\.(?<major>\\d{4})-(?<minor>\\d{2})-(?<patch>\\d{2})T(?<build>.+)Z$"
        },
        {
            "groupName": "docker-ci",
            "branchTopic": "docker-ci",
            "matchCategories": [
                "ci"
            ],
            "matchDepNames": [
                "docker/*",
                "ScribeMD/docker-cache"
            ]
        },
        {
            "groupName": "php",
            "matchDepNames": [
                "php",
                "etriasnl/dev-php-fpm",
                "etriasnl/php-fpm"
            ]
        },
        {
            "groupName": "symfony",
            "matchDepNames": [
                "symfony/*"
            ]
        },
        {
            "groupName": "twig",
            "matchDepNames": [
                "twig/*"
            ]
        },
        {
            "groupName": "doctrine",
            "matchDepNames": [
                "doctrine/*"
            ]
        },
        {
            "groupName": "flysystem",
            "matchDepNames": [
                "league/flysystem*"
            ]
        },
        {
            "groupName": "pagerfanta",
            "matchDepNames": [
                "pagerfanta/*"
            ]
        }
    ]
}
