{
    "$schema": "https://docs.renovatebot.com/renovate-schema.json",
    "extends": [
        "config:recommended",
        ":rebaseStalePrs",
        ":semanticCommits",
        ":separatePatchReleases"
    ],
    "configMigration": true,
    "rangeStrategy": "bump",
    "pinDigests": false,
    "minimumReleaseAge": "3 days",
    "lockFileMaintenance": {
        "enabled": true,
        "schedule": [
            "before 4am on the first day of the month"
        ]
    },
    "ignoreDeps": [
        "alptis/net-gearman"
    ],
    "customManagers": [
        {
            "customType": "regex",
            "fileMatch": [
                "^okteto.yaml$"
            ],
            "matchStrings": [
                "image\\s?:\\s?(?<depName>.*?):(?<currentValue>[\\w+\\.\\-]*)"
            ],
            "datasourceTemplate": "docker",
            "versioningTemplate": "loose"
        }
    ],
    "packageRules": [
        {
            "groupName": "docker-ci",
            "matchDepPatterns": [
                "^docker/",
                "^scribemd/docker-cache"
            ],
            "matchCategories": [
                "ci"
            ]
        },
        {
            "groupName": "php",
            "matchDepNames": [
                "php",
                "etriasnl/dev-php-fpm",
                "etriasnl/php-fpm"
            ]
        },
        {
            "matchDepNames": [
                "etriasnl/dev-php-fpm",
                "etriasnl/php-fpm"
            ],
            "versioning": "loose"
        },
        {
            "groupName": "twig",
            "matchDepPatterns": [
                "^twig/"
            ]
        },
        {
            "groupName": "flysystem",
            "matchDepPatterns": [
                "^league/flysystem"
            ]
        },
        {
            "groupName": "pagerfanta",
            "matchDepPatterns": [
                "^pagerfanta/"
            ]
        }
    ]
}
