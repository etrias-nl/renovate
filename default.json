{
    "$schema": "https://docs.renovatebot.com/renovate-schema.json",
    "extends": [
        "config:recommended",
        ":rebaseStalePrs",
        ":semanticCommits"
    ],
    "configMigration": true,
    "rangeStrategy": "bump",
    "pinDigests": false,
    "rollbackPrs": true,
    "minimumReleaseAge": "5 days",
    "lockFileMaintenance": {
        "enabled": true,
        "schedule": [
            "before 4am on the first day of the month"
        ]
    },
    "ignoreDeps": [
        "alptis/net-gearman"
    ],
    "customManagers": [
        {
            "customType": "regex",
            "fileMatch": [
                "^okteto.yaml$"
            ],
            "matchStrings": [
                "image\\s?:\\s?(?<depName>.*?):(?<currentValue>[\\w+\\.\\-]*)"
            ],
            "datasourceTemplate": "docker",
            "versioningTemplate": "loose"
        }
    ],
    "kubernetes": {
        "fileMatch": [
            "k8s/.+\\.yaml$"
        ]
    },
    "helm-values": {
        "fileMatch": [
            "k8s/.+\\.yaml$"
        ]
    },
    "packageRules": [
        {
            "matchDepNames": [
                "php"
            ],
            "changelogUrl": "https://github.com/php/php-src"
        },
        {
            "matchDepNames": [
                "nats"
            ],
            "matchDatasources": [
                "docker"
            ],
            "changelogUrl": "https://github.com/nats-io/nats-server"
        },
        {
            "matchDepNames": [
                "nats"
            ],
            "matchDatasources": [
                "helm"
            ],
            "changelogUrl": "https://github.com/nats-io/k8s"
        },
        {
            "matchDepNames": [
                "composer/composer"
            ],
            "changelogUrl": "https://github.com/composer/composer"
        },
        {
            "matchDepNames": [
                "psalm/phar"
            ],
            "changelogUrl": "https://github.com/vimeo/psalm"
        },
        {
            "matchDepNames": [
                "etriasnl/dev-php-fpm",
                "etriasnl/php-fpm",
                "minio/minio"
            ],
            "versioning": "loose"
        },
        {
            "matchDatasources": [
                "docker"
            ],
            "matchPackagePatterns": [
                "^minio"
            ],
            "versioning": "regex:^RELEASE\\.(?<major>\\d{4})-(?<minor>\\d{2})-(?<patch>\\d{2})T(?<build>.+)Z$"
        },
        {
            "groupName": "docker-ci",
            "matchDepPatterns": [
                "^docker/",
                "^ScribeMD/docker-cache"
            ],
            "matchCategories": [
                "ci"
            ]
        },
        {
            "groupName": "php",
            "matchDepNames": [
                "php",
                "etriasnl/dev-php-fpm",
                "etriasnl/php-fpm"
            ],
            "separateMinorPatch": true
        },
        {
            "groupName": "symfony",
            "matchDepPatterns": [
                "^symfony/"
            ]
        },
        {
            "groupName": "twig",
            "matchDepPatterns": [
                "^twig/"
            ]
        },
        {
            "groupName": "doctrine",
            "matchDepPatterns": [
                "^doctrine/"
            ]
        },
        {
            "groupName": "flysystem",
            "matchDepPatterns": [
                "^league/flysystem"
            ]
        },
        {
            "groupName": "pagerfanta",
            "matchDepPatterns": [
                "^pagerfanta/"
            ]
        }
    ]
}
