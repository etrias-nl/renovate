{
    "$schema": "https://docs.renovatebot.com/renovate-schema.json",
    "extends": [
        "config:base",
        ":rebaseStalePrs",
        ":semanticCommits",
        ":separatePatchReleases"
    ],
    "configMigration": true,
    "rangeStrategy": "bump",
    "ignoreDeps": [
        "alptis/net-gearman"
    ],
    "regexManagers": [
        {
            "datasourceTemplate": "docker",
            "fileMatch": [
                "^okteto.yaml$"
            ],
            "matchStrings": [
                "#\\s?renovate: image=(?<depName>.*?)\\s?appVersion:\\s?\\\"?(?<currentValue>[\\w+\\.\\-]*)\""
            ]
        }
    ]
}
